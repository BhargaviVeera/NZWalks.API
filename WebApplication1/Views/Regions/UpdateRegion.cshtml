@model NZWalks.Web.Models.RegionViewModel

<h1>Edit Region</h1>

<form method="post" asp-action="EditRegion" asp-route-id="@ViewBag.RegionId">
    <div class="mt-3">
        <label class="form-label">Code</label>
        <input type="text" class="form-control" asp-for="Code" />
    </div>
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label class="form-label">Image URL</label>
        <input type="text" class="form-control" asp-for="RegionImageUrl" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-success">Update</button>
    </div>
</form>
