@model IEnumerable<NZWalks.Web.Models.DTO.RegionDTO>

<h1 class="mt-3">Regions</h1>

<div class="d-flex justify-content-end">
    <a class="btn btn-primary" asp-controller="Regions" asp-action="AddRegion">Add Region</a>
</div>

<table class="table table-bordered mt-3">
    <thead class="table-light">
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var region in Model)
        {
            <tr>
                <td>@region.Id</td>
                <td>@region.Code</td>
                <td>@region.Name</td>
                <td>
                    <a class="btn btn-warning btn-sm"
                       asp-controller="Regions"
                       asp-action="EditRegion"
                       asp-route-id="@region.Id">Edit</a>
                    <a class="btn btn-danger btn-sm"
                       asp-controller="Regions"
                       asp-action="DeleteRegion"
                       asp-route-id="@region.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
